<!-- Header -->
<h2 class="ui center aligned icon header">
  <i class="circular orange users icon"></i>
  Start chatting with your friends!
</h2>

<div class="ui two column grid">

  <!-- Chat Room -->
  <div class="twelve wide column">
    <div class="ui card fluid raised chatBox">
      <div class="content" id="content-container">
        <div class="ui small feed" id="message-container">
          <h4 class="ui header">Chat Room</h4>
          <%= render @messages%>
        </div>
      </div>

      <div class="extra content">
        <%= form_for(@message, html: {class:"ui reply form", role: "form", remote: true}, url: message_path) do |f| %>
          <div class="ui action input fluid">
            <%= f.text_field :body, placeholder: "Enter your message here"%>
            <%= f.button 'Send', class: "ui button orange"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Vertical Menu -->
  <div class="four wide column chatBox">
    <div class="ui card fluid raised">
      <div class="content">
        <div class="ui vertical menu inverted fluid">
          <a class="active item">
            Account
          </a>
          <a class="item">
            Settings
          </a>
          <div class="ui dropdown item">
            <i class="dropdown icon"></i>
            Display Options
            <div class="menu">
              <div class="header">Text Size</div>
              <a class="item">Small</a>
              <a class="item">Medium</a>
              <a class="item">Large</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
